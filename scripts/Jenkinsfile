pipeline {
    agent any

    stages {

	stage ('Validate Java') {
 	    steps {
		sh """
		cd DynamicDisplays
		mvn -B -DskipTests clean validate
		"""
	    }
	}

	stage ('Validate scripts') {
 	    steps {
		sh """
		cd DynamicDisplays
		./checkAllScripts.sh
		"""
	    }
	}
	
	stage ('Build') {
 	    steps {
		sh """
		cd DynamicDisplays
		mvn -B -DskipTests clean compile
		""" 
	    }
	}
	
	stage ('Unit Tests') {
 	    steps {
		sh """
		cd DynamicDisplays
		mvn -B test
		"""
	    }
	}
	
	stage ('Rudimentary Run Test Linux') {
 	    steps {
		sh """
		cd DynamicDisplays
		set +x		
		. ./setupEnvironment.sh
		set -x
		echo "----- Testing that certain classes run ----"
		for i in \
		    gov.fnal.ppd.dd.util.nonguiUtils.JavaVersion \
		    gov.fnal.ppd.dd.util.nonguiUtils.PerformanceMonitor \
		    gov.fnal.ppd.dd.changer.ChannelCatalogFactory \
		    gov.fnal.ppd.dd.channel.MapOfChannels \
		    gov.fnal.ppd.dd.db.DisplayUtilDatabase \
		    gov.fnal.ppd.dd.db.GetDefaultContentForDisplay \
		    gov.fnal.ppd.dd.util.specific.HasChannelSelector \
		    gov.fnal.ppd.dd.util.specific.IsDisplayNode \
		    gov.fnal.ppd.dd.util.specific.SummarizeContentHistory \
		    gov.fnal.ppd.dd.util.specific.TranslateGITHashCodeToDate \
		    gov.fnal.ppd.security.CheckHostName \
		; do
		      echo "      $i"
		      java $i

		done		    

		echo "Testing that the PropertiesFile class runs"
		cp -p ../config/config.properties ../config/config.properties_hold
		java gov.fnal.ppd.dd.util.nonguiUtils.PropertiesFile
		ls -l ../config/config.properties ../config/config.properties_hold
		rm ../config/config.properties 
		mv ../config/config.properties_hold ../config/config.properties
		"""
	    }
	}
    }
 }